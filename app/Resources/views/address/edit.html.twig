{% extends 'base.html.twig' %}

{% block container %}
    <div class="container">
        {{ form_start(form, {'attr': {'id': 'addressForm', 'enctype':'multipart/form-data', 'method':'post'}}) }}
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    {{ form_row(form.firstName, {'attr':{'class':'form-control', 'placeholder':'Enter first name'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.lastName, {'attr':{'class':'form-control', 'placeholder':'Enter last name'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.email, {'attr':{'class':'form-control', 'placeholder':'Enter Email'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.birthday, {'attr':{'class':'form-control', 'placeholder':'Choose birthday'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.phoneNumber, {'attr':{'class':'form-control', 'placeholder':'Enter phone'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.birthday, {'attr':{'class':'form-control', 'placeholder':'Choose birthday'}}) }}
                </div>

            </div>
            <div class="col-6">
                <div class="form-group">
                    {{ form_row(form.country, {'attr':{'class':'form-control', 'placeholder':'Enter Country'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.city, {'attr':{'class':'form-control', 'placeholder':'Enter city'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.street, {'attr':{'class':'form-control', 'placeholder':'Enter street'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.zipcode, {'attr':{'class':'form-control', 'placeholder':'Enter zipcode'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.picture, {'attr':{'class':'form-control', 'placeholder':'Enter picture'}}) }}
                </div>
            </div>
        </div>
        {{ form_row(form.submit) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
